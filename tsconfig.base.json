{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@course-dag/core": ["packages/core/src"],
      "@course-dag/expression": ["packages/expression/src"],
      "@course-dag/parser-excel": ["packages/parser-excel/src"],
      "@course-dag/parser-pdf": ["packages/parser-pdf/src"],
      "@course-dag/*": ["packages/*/src"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true
  }
}
